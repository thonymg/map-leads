{
  "name": "mapleads",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "node --experimental-strip-types index.ts",
    "scrape": "node --experimental-strip-types scrape.ts",
    "auth": "node --experimental-strip-types scripts/auth-ui.ts",
    "record": "npx playwright codegen",
    "record:file": "npx playwright codegen -o recordings/recording.ts",
    "convert": "node --experimental-strip-types src/converter/index.ts",
    "convert:all": "node --experimental-strip-types -e \"import { convertDirectory } from './src/converter/index.ts'; convertDirectory({ inputDir: './recordings', outputDir: './scrappe', optimizeSelectors: true });\"",
    "test": "bun test",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration/",
    "test:validation": "bun test tests/validation/",
    "test:actions": "bun test tests/unit/actions/",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:verbose": "bun test --verbose",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc --noEmit -p tests/tsconfig.json"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/bun": "latest",
    "@types/node": "latest",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "p-limit": "^6.2.0",
    "playwright": "^1.58.2",
    "yaml": "^2.7.0"
  }
}
